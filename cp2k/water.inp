&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME /ihome/sam/leb140/cp2k/PengLiu/Nitrene0/BASIS_SET
    POTENTIAL_FILE_NAME /ihome/sam/leb140/cp2k/PengLiu/Nitrene0/POTENTIAL
    &MGRID
      CUTOFF 280
    &END MGRID
    &QS
      EXTRAPOLATION PS
      EXTRAPOLATION_ORDER 2
    &END QS
    &SCF
      CHOLESKY OFF
      SCF_GUESS ATOMIC
      EPS_SCF 3.0E-6
      MAX_SCF 20
      &OUTER_SCF
         EPS_SCF 3.0E-6
         MAX_SCF 20
      &END
      &OT
         MINIMIZER DIIS
         PRECONDITIONER FULL_ALL
         ENERGY_GAP 0.01
      &END
    &END SCF
    &PRINT
       &E_DENSITY_CUBE LOW
       &END E_DENSITY_CUBE
    &END
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
      &vdW_POTENTIAL # D3 correction
         DISPERSION_FUNCTIONAL PAIR_POTENTIAL
         &PAIR_POTENTIAL
            TYPE DFTD2
            R_CUTOFF 15.0
            SCALING 1.0
         &END PAIR_POTENTIAL
      &END vdW_POTENTIAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 8.0 8.0 8.0
    &END CELL
    &COORD
  O         4.4273909857        3.7018969633        3.3435737747
  H         4.1476531100        3.3182578220        2.4499174488
  H         4.8681049457        3.0009311836        3.8827183546
    &END COORD
    &KIND H
     BASIS_SET DZVP-GTH-BLYP
     POTENTIAL GTH-BLYP-q1
    &END KIND
    &KIND O
     BASIS_SET DZVP-GTH-BLYP
     POTENTIAL GTH-BLYP-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT h2o
  RUN_TYPE MD
  PRINT_LEVEL LOW
&END GLOBAL
&MOTION
  &MD
    ENSEMBLE NVT
    STEPS 2000
    TIMESTEP 0.5
    TEMPERATURE 298.0
    &THERMOSTAT
      &NOSE
        LENGTH 3
        YOSHIDA 3
        TIMECON 100.0
        MTS 2
      &END NOSE
    &END THERMOSTAT
  &END MD
  &PRINT
    &VELOCITIES
    &END VELOCITIES
  &END PRINT
&END MOTION
